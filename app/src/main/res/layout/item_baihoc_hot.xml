<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp10"
    app:cardCornerRadius="@dimen/dp10">
    <LinearLayout
        android:id="@+id/ll_baihoc_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_baihoc_hot"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp200">
        </ImageView>
        <TextView
            android:textColor="#000000"
            android:text="Tên Bài Học"
            android:maxWidth="@dimen/dp200"
            android:textSize="@dimen/dp20"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/tv_ten_baihoc_hot"
            android:layout_marginRight="@dimen/dp2"
            android:layout_marginLeft="@dimen/dp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="đây là nội dung nè"
            android:textSize="@dimen/dp15"
            android:textColor="#000000"
            android:maxWidth="@dimen/dp200"
            android:ellipsize="end"
            android:minLines="1"
            android:id="@+id/tv_mota_baihoc_hot"
            android:layout_marginRight="@dimen/dp2"
            android:layout_marginLeft="@dimen/dp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>