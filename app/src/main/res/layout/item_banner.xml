<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_backgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200">
    </ImageView>

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200">
    </View>
    <RelativeLayout
        android:id="@+id/rl_banner"
        android:layout_alignBottom="@id/iv_backgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_banner"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70">
        </ImageView>
        <TextView
            android:textColor="#ffffff"
            android:text="sang đẹp trai"
            android:textSize="@dimen/dp17"
            android:id="@+id/tv_title_banner"
            android:layout_marginTop="@dimen/dp5"
            android:layout_alignTop="@id/iv_banner"
            android:layout_toRightOf="@id/iv_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp5"
            android:layout_below="@id/tv_title_banner"
            android:layout_toRightOf="@id/iv_banner"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_noidung_banner"
                android:textColor="#ffffff"
                android:text="đây là dòng nội dung của bài hát nó có hai dòng rất là hợp lý"
                android:maxLines="2"
                android:layout_marginRight="@dimen/dp40"
                android:textSize="@dimen/dp13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>